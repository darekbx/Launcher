<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.opengl.GLSurfaceView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.mlauncher.view.DayTimeView
            android:id="@+id/day_time_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/pebble_disconnected"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/pebble_disconnected"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="0dp"/>

        <LinearLayout
            android:id="@+id/content_bottom_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="13dip"
            android:paddingRight="13dip"
            android:paddingBottom="14dip"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageButton
                android:id="@+id/button_phone"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:layout_marginRight="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_phone"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:layout_marginRight="14dp">
                <ImageButton
                    android:id="@+id/button_dot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_dot"
                    android:background="@android:color/transparent" />
                <TextView
                    android:id="@+id/dot_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="23"
                    android:textColor="#fff"
                    android:textSize="28sp"
                    android:paddingBottom="2dp"
                    />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/button_sms"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:scaleType="fitXY"
                android:src="@drawable/btn_sms"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_drawer"
        android:layout_width="250dip"
        android:layout_height="match_parent"
        android:layout_marginTop="210dip"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:background="#8000"
        android:padding="2dip">

        <GridView
            android:id="@+id/list_apps"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/buttons_drawer"
            android:layout_marginTop="4dip"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dip"
            android:overScrollMode="never"
            android:fadeScrollbars="false"
            android:cacheColorHint="#000"
            android:choiceMode="singleChoice"
            android:columnWidth="50dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:scrollbars="none"
            android:listSelector="#0000"
            />

        <LinearLayout
            android:id="@+id/buttons_drawer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">
            <ToggleButton
                android:id="@+id/toggle_wifi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/font_default"
                android:textOn="@string/button_wifi_on"
                android:textOff="@string/button_wifi_off"
                android:background="@drawable/btn_settings"
                android:layout_margin="0dp"/>
            <!--<Button
                android:id="@+id/button_settings"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/font_default"
                android:text="@string/button_settings"
                android:background="@drawable/btn_settings"
                android:layout_margin="0dp"/>-->
            <Button
                android:id="@+id/button_filter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/font_default"
                android:text="@string/button_filter"
                android:background="@drawable/btn_settings"
                android:layout_margin="0dp"/>
        </LinearLayout>

        <TableLayout
            android:id="@+id/filter_table"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="1dp"
            android:background="#c000"
            android:stretchColumns="*"
            android:visibility="gone">
            <TableRow>
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="A"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="B"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="C"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="D"
                    style="@style/FilterButtonActive"
                    />
            </TableRow>
            <TableRow>
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="E"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="F"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="G"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="H"
                    style="@style/FilterButtonActive"
                    />
            </TableRow>
            <TableRow>
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="I"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="J"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="K"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="L"
                    style="@style/FilterButtonActive"
                    />
            </TableRow>
            <TableRow>
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="M"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="N"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="O"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="P"
                    style="@style/FilterButtonActive"
                    />
            </TableRow>
            <TableRow>
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Q"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="R"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="S"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="T"
                    style="@style/FilterButtonActive"
                    />
            </TableRow>
            <TableRow>
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="U"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="V"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="W"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="X"
                    style="@style/FilterButtonActive"
                    />
            </TableRow>
            <TableRow>
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Y"
                    style="@style/FilterButtonActive"
                    />
                <com.mlauncher.view.FilterButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Z"
                    style="@style/FilterButtonActive"
                    />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
